generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  image     String?
  bio       String?
  gender    String?
  role      Role     @default(ATTENDEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  hostedExperiences Event[] @relation("HostedExperiences")
  joinedExperiences RSVP[]
  orders            Order[]
  tickets           Ticket[]
  messages          Message[]
  
  // Follow relationships
  followers  Follow[] @relation("Following")
  following  Follow[] @relation("Follower")
}

model Event {
  id              String   @id @default(cuid())
  title           String
  description     String
  category        String?
  date            DateTime
  rsvpDeadline    DateTime  // Countdown deadline to join
  location        String
  locationTBD     Boolean  @default(false)  // For spontaneous plans
  latitude        Float?
  longitude       Float?
  price           Float    @default(0)
  // maxParticipants removed
  image           String?
  gallery         String[]
  isFeatured      Boolean  @default(false)
  isInstantJoin   Boolean  @default(true)   // Auto-approve joins
  published       Boolean  @default(true)   // Auto-publish by default
  
  visibility      Visibility @default(PUBLIC)
  audience        Audience   @default(ALL)

  hostId      String
  host        User     @relation("HostedExperiences", fields: [hostId], references: [id])
  
  participants RSVP[]   @relation("EventParticipants")
  tickets      Ticket[]
  messages     Message[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RSVP {
  id        String   @id @default(cuid())
  status    RSVPStatus @default(CONFIRMED)
  joinedAt  DateTime @default(now())  // When they joined
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  eventId   String
  event     Event    @relation("EventParticipants", fields: [eventId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, eventId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String   // User who is following
  followingId String   // User being followed
  
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
}

model Order {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  totalAmount     Float
  paymentStatus   PaymentStatus @default(PENDING)
  paymentIntentId String?
  tickets         Ticket[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Ticket {
  id        String       @id @default(cuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  eventId   String
  event     Event        @relation(fields: [eventId], references: [id])
  orderId   String?
  order     Order?       @relation(fields: [orderId], references: [id])
  qrCode    String?      @unique
  status    TicketStatus @default(VALID)
  checkedInAt DateTime?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
}

enum Role {
  ATTENDEE
  HOST
  ADMIN
}

enum RSVPStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum TicketStatus {
  VALID
  USED
  CANCELLED
  REFUNDED
}

enum Visibility {
  PUBLIC
  PRIVATE
}

enum Audience {
  ALL
  MEN_ONLY
  WOMEN_ONLY
}
